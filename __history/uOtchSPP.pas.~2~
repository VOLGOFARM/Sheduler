{$R *.dfm}
USES uMain;

procedure TfrmOtchSPP.Button1Click(Sender: TObject);
begin
  with MSQuery2 do begin
    Close;
    ParamByName('SDate').AsDateTime:=DateTimePicker1.DateTime;
    ParamByName('EDate').AsDateTime:=DateTimePicker2.DateTime;
    ParamByName('DepID').AsInteger:=DEPID;
    Open;
  end;
  frxDBDataset2.Open;
  frxReport2.ShowReport;
end;

procedure TfrmOtchSPP.Button2Click(Sender: TObject);
begin
  with MSQuery2 do begin
    Close;
    ParamByName('SDate').AsDateTime := DateTimePicker1.DateTime;
    ParamByName('EDate').AsDateTime := DateTimePicker2.DateTime;
    ParamByName('DepID').AsInteger  := DEPID;
    Open;
  end;
  frxReport1.ShowReport;
end;

procedure TfrmOtchSPP.Button3Click(Sender: TObject);
begin
  with MSQuery2 do begin
    Close;
    ParamByName('SDate').AsDateTime:=DateTimePicker1.DateTime;
    ParamByName('EDate').AsDateTime:=DateTimePicker2.DateTime;
    ParamByName('DepID').AsInteger:=DEPID;
    Open;
  end;
end;

procedure TfrmOtchSPP.Button4Click(Sender: TObject);
begin
  with MSQuery1 do begin
    Close;
    ParamByName('DateS').AsDateTime:=DateTimePicker1.DateTime;
    ParamByName('DateE').AsDateTime:=DateTimePicker2.DateTime;
    ParamByName('DepID').AsInteger:=DEPID;
    ParamByName('Task').AsInteger:=MSQuery2.FieldByName('TaskId').AsInteger;
    Open;
  end;
  frxReport3.ShowReport;
end;

procedure TfrmOtchSPP.Button5Click(Sender: TObject);
begin
  with MSQuery1 do begin
    Close;
    ParamByName('DateS').AsDateTime:=DateTimePicker1.DateTime;
    ParamByName('DateE').AsDateTime:=DateTimePicker2.DateTime;
    ParamByName('DepID').AsInteger:=DEPID;
    ParamByName('Task').AsInteger:=MSQuery2.FieldByName('TaskId').AsInteger;
    Open;
  end;
  frxReport4.ShowReport;
end;

procedure TfrmOtchSPP.Button6Click(Sender: TObject);
begin
  with MSQuery3 do begin
    Close;
    ParamByName('SDate').AsDateTime := DateTimePicker1.DateTime;
    ParamByName('EDate').AsDateTime := DateTimePicker2.DateTime;
    ParamByName('DepID').AsInteger  := DEPID;
    Open;
  end;
